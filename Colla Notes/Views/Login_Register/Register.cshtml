
@model Colla_Notes.Views.Login_Register.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="text-dark p-3 p-md-4" style="background: linear-gradient(90deg, #6DE1A7 0%, #5BC999 100%);">
    <div class="container-fluid">
        <div class="row align-items-center g-3">
            <!-- Logo -->
            <div class="col-12 col-md-4 col-lg-3">
                <div class="d-flex align-items-center justify-content-center justify-content-md-start">
                    <div class="bg-dark rounded-3 p-2 me-2">
                        <i class="fas fa-sticky-note fs-5" style="color: #6DE1A7;"></i>
                    </div>
                    <h1 class="fw-bold mb-0 fs-4">Colla Notes</h1>
                </div>
            </div>

            <!-- Features -->
            <div class="col-12 col-md-4 col-lg-6 d-none d-md-block">
                <div class="d-flex justify-content-center gap-3 gap-lg-4">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-bolt fs-6 me-2"></i>
                        <div>
                            <h6 class="fw-bold mb-0" style="font-size: 0.85rem;">Quick Setup</h6>
                            <p class="mb-0" style="font-size: 0.7rem;">Ready in 2 minutes</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="fas fa-gift fs-6 me-2"></i>
                        <div>
                            <h6 class="fw-bold mb-0" style="font-size: 0.85rem;">Free Forever</h6>
                            <p class="mb-0" style="font-size: 0.7rem;">No credit card</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="fas fa-star fs-6 me-2"></i>
                        <div>
                            <h6 class="fw-bold mb-0" style="font-size: 0.85rem;">Premium</h6>
                            <p class="mb-0" style="font-size: 0.7rem;">All tools</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Login Link -->
            <div class="col-12 col-md-4 col-lg-3">
                <div class="text-center text-md-end">
                    <a asp-controller="Login_Register" asp-action="Login" class="text-dark text-decoration-none fw-semibold small">
                        Have an account? <span class="fw-bold">Login</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="container py-4 py-md-5">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
            <div class="bg-white rounded-4 shadow-lg p-4 p-md-5 animate__animated animate__fadeIn">
                <!-- Header -->
                <div class="text-center mb-4">
                    <h2 class="fw-bold mb-3 fs-2 animate__animated animate__fadeInUp">Collaborate.</h2>
                    <h2 class="fw-bold mb-3 fs-2 animate__animated animate__fadeInUp animate__delay-1s">Create.</h2>
                    <h2 class="fw-bold mb-4 fs-2 animate__animated animate__fadeInUp animate__delay-2s">Conquer.</h2>
                    <p class="text-muted animate__animated animate__fadeIn animate__delay-3s">Create your Colla Notes account today!</p>
                </div>

                <form>
                    <!-- Username Input -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Username</label>
                        <input type="text" class="form-control form-control-lg border-2 shadow-sm" placeholder="Choose a username" required>
                    </div>

                    <!-- Email Input -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Email</label>
                        <input type="email" class="form-control form-control-lg border-2 shadow-sm" placeholder="Enter your email" required>
                    </div>

                    <!-- Mobile Number Input -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Mobile Number</label>
                        <input type="tel" class="form-control form-control-lg border-2 shadow-sm" placeholder="Enter your mobile number" required>
                    </div>

                    <!-- Password Input -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Password</label>
                        <input type="password" class="form-control form-control-lg border-2 shadow-sm" placeholder="Create a strong password" required>
                        <div class="form-text small">Must be at least 8 characters long</div>
                    </div>

                    <!-- Terms & Conditions -->
                    <div class="form-check mb-4">
                        <input class="form-check-input" type="checkbox" id="terms" required>
                        <label class="form-check-label small" for="terms">
                            I agree to the <a href="#" class="text-decoration-none" style="color: #6DE1A7;">Terms of Service</a> and <a href="#" class="text-decoration-none" style="color: #6DE1A7;">Privacy Policy</a>
                        </label>
                    </div>

                    <!-- Register Button -->
                    <button type="submit" asp-action="RegisterSuccessful" asp-controller="Login_Register" class="btn btn-lg fw-bold shadow-sm mb-4 w-100 text-white" style="background-color: #2F8F63; border: none;">
                        Create Account
                    </button>

                </form>

                <!-- Footer Links -->
                <div class="mt-4 pt-4 border-top text-center">
                    <div class="d-flex flex-wrap justify-content-center gap-3 gap-md-4 small text-muted">
                        <a class="text-decoration-none text-muted">Privacy Policy</a>
                </div>
            </div>
        </div>
    </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
