@model Colla_Notes.Models.LoginClass
@{
    ViewData["Title"] = "Login";
}

<!-- Top Bar -->
<div class="text-dark p-3 p-md-4" style="background: linear-gradient(90deg, #6DE1A7 0%, #5BC999 100%);">
    <div class="container-fluid">
        <div class="row align-items-center g-3">
            <!-- Logo -->
            <div class="col-12 col-md-4 col-lg-3">
                <div class="d-flex align-items-center justify-content-center justify-content-md-start">
                    <div class="bg-dark rounded-3 p-2 me-2">
                        <i class="fas fa-sticky-note fs-5" style="color: #6DE1A7;"></i>
                    </div>
                    <h1 class="fw-bold mb-0 fs-4">Colla Notes</h1>
                </div>
            </div>

            <!-- Features -->
            <div class="col-12 col-md-4 col-lg-6 d-none d-md-block">
                <div class="d-flex justify-content-center gap-3 gap-lg-4">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-users fs-6 me-2"></i>
                        <div>
                            <h6 class="fw-bold mb-0" style="font-size: 0.85rem;">Team Collaboration</h6>
                            <p class="mb-0" style="font-size: 0.7rem;">Work together</p>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-center">
                        <i class="fas fa-lock fs-6 me-2"></i>
                        <div>
                            <h6 class="fw-bold mb-0" style="font-size: 0.85rem;">Secure</h6>
                            <p class="mb-0" style="font-size: 0.7rem;">Protected data</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Register Link -->
            <div class="col-12 col-md-4 col-lg-3">
                <div class="text-center text-md-end">
                    <a asp-controller="Login_Register" asp-action="Register" class="text-dark text-decoration-none fw-semibold small">
                        New here? <span class="fw-bold">Register</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="container py-4 py-md-5">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
            <div class="bg-white rounded-4 shadow-lg p-4 p-md-5 animate__animated animate__fadeIn">
                <!-- Header -->
                <div class="text-center mb-4">
                    <h2 class="fw-bold mb-3 fs-2 animate__animated animate__fadeInUp">Welcome Back.</h2>
                    <h2 class="fw-bold mb-3 fs-2 animate__animated animate__fadeInUp animate__delay-1s">Continue Creating.</h2>
                    <h2 class="fw-bold mb-4 fs-2 animate__animated animate__fadeInUp animate__delay-2s">Keep Conquering.</h2>
                    <p class="text-muted animate__animated animate__fadeIn animate__delay-3s">Sign in to access your notes</p>
                </div>

                <form asp-action="Login" asp-controller="Login_Register" method="post">
                    <!-- Email Input -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Email</label>
                        <input type="email" asp-for="Email" class="form-control form-control-lg border-2 shadow-sm" placeholder="Enter your email" required>
                    </div>

                    <!-- Password Input -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Password</label>
                        <input type="password" asp-for="Password" class="form-control form-control-lg border-2 shadow-sm" placeholder="Enter your password" required>
                    </div>

                    <!-- Forget Pass -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <a asp-action="ForgetPassword" asp-controller="Login_Register" class="text-decoration-none fw-semibold" style="color: #6DE1A7;">Forgot password?</a>
                    </div>

                    <!-- Login -->
                    <button type="submit" class="btn btn-lg fw-bold shadow-sm mb-4 w-100 text-white" style="background-color: #2F8F63; border: none;">
                        Login
                    </button>

                </form>

                <!-- Footer Links -->
                <div class="mt-4 pt-4 border-top text-center">
                    <div class="d-flex flex-wrap justify-content-center gap-3 gap-md-4 small text-muted">
                        <a href="#" class="text-decoration-none text-muted">Privacy Policy</a>
                        <a href="#" class="text-decoration-none text-muted">Terms of Service</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
