@model Colla_Notes.Views.Login_Register.RegisterSuccessfulModel
@{
    ViewData["Title"] = "Registration Successful";
}

<div class="min-h-screen flex items-center justify-center mt-4" style="background: linear-gradient(135deg, #6DE1A7 0%, #5BC999 50%, #2F8F63 100%);">
    <div class="w-full max-w-md">
        <div class="bg-white rounded-3xl shadow-2xl p-8 text-center transform transition-all hover:scale-[1.02] duration-300">
            
            <!-- Success Icon -->
            <div class="mb-6 animate-bounce-slow">
                <div class="inline-flex items-center justify-center w-24 h-24 rounded-full mb-4 relative" style="background: linear-gradient(135deg, #E8F8F0 0%, #D1F0E1 100%);">
                    <div class="absolute inset-0 rounded-full animate-ping opacity-20" style="background-color: #6DE1A7;"></div>
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="#2F8F63" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" class="relative z-10">
                        <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                </div>
            </div>

            <!-- Message -->
            <h2 class="text-3xl font-bold mb-3 text-gray-900 tracking-tight">Registration Successful!</h2>
            <p class="text-gray-600 mb-6 text-base leading-relaxed">
                Your Colla Notes account has been created successfully. Welcome aboard! 🎉
            </p>

            <div class="rounded-2xl p-6 mb-6 backdrop-blur-sm" style="background: linear-gradient(135deg, #F8F9FA 0%, #F0F2F5 100%);">
                <div class="flex items-center justify-center mb-4">
                    <div class="rounded-xl p-2.5 mr-2 shadow-md" style="background-color: #2F8F63;">
                        <i class="fas fa-sticky-note text-white text-lg"></i>
                    </div>
                    <h5 class="font-bold text-lg text-gray-900">Colla Notes</h5>
                </div>
                <p class="text-sm text-gray-600 mb-4 font-medium">You can now access all features:</p>
                <div class="flex justify-center gap-2 flex-wrap">
                    <span class="inline-flex items-center rounded-full px-4 py-2 text-sm font-semibold shadow-sm transition-all hover:scale-105" style="background-color: #E8F8F0; color: #2F8F63;">
                        <i class="fas fa-check-circle mr-2"></i> Collaboration
                    </span>
                    <span class="inline-flex items-center rounded-full px-4 py-2 text-sm font-semibold shadow-sm transition-all hover:scale-105" style="background-color: #E8F8F0; color: #2F8F63;">
                        <i class="fas fa-check-circle mr-2"></i> Premium Tools
                    </span>
                </div>
            </div>

            <a asp-controller="Login_Register" asp-action="Login" class="inline-flex items-center justify-center w-full py-4 px-6 rounded-xl text-white font-bold text-lg shadow-lg transition-all duration-300 hover:shadow-xl hover:scale-[1.02] active:scale-95 mb-4" style="background: linear-gradient(135deg, #2F8F63 0%, #26724F 100%);">
                <i class="fas fa-sign-in-alt mr-2"></i>
                <span>Go to Login</span>
            </a>

            <p class="text-sm text-gray-600 mb-0">
                Want to explore first? 
                <a href="#" class="font-semibold transition-colors hover:underline" style="color: #2F8F63;">
                    Learn more about features
                </a>
            </p>
        </div>

        <div class="text-center mt-6 animate-fade-in">
            <div class="inline-flex items-center bg-white/20 backdrop-blur-md rounded-full px-6 py-3 shadow-lg">
                <i class="fas fa-shield-alt text-white mr-2"></i>
                <p class="text-sm text-white font-medium mb-0">
                    Your data is encrypted and secure
                </p>
            </div>
        </div>
    </div>
</div>