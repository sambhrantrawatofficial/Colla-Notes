@using System.Text.RegularExpressions
@model IEnumerable<Post>

<h2 class="mb-4">Search Results</h2>

<!-- 1️⃣ Search Bar -->
<form asp-action="Search" asp-controller="Home" method="get" class="mb-4">
    <div class="input-group">
        <input type="text" name="title" class="form-control" placeholder="Search courses..." />
        <button class="btn btn-primary" type="submit">
            🔍
        </button>
    </div>
</form>

<!-- 2️⃣ Results Section -->
@if (Model != null && Model.Any())
{
    <div class="row row-cols-1 row-cols-md-3 g-4 mt-4">
        @foreach (var data in Model)
        {
            <!-- Card UI STARTS here -->
            <div class="col">
                <div class="card h-100 shadow-sm rounded-4">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">@data.Title</h5>
                        <p class="card-text text-muted flex-grow-1">
                            @{
                                var match = Regex.Match(data.Description ?? "", "<p>(.*?)</p>", RegexOptions.Singleline);
                                var firstPara = match.Success ? match.Groups[1].Value : data.Description ?? "";
                                var plain = Regex.Replace(firstPara, "<.*?>", "").Replace("&nbsp;", " ").Trim();
                                var shortText = plain.Length > 120 ? plain.Substring(0, 120) + "..." : plain;
                            }
                            @shortText
                        </p>
                        <p class="text-muted mb-1"><strong>Author:</strong> @data.Username</p>
                        <div class="text-muted mb-2 small">👁️ @data.ViewCount • 👍 @data.LikeCount</div>
                        <a asp-controller="Home" asp-action="ReadMore" asp-route-id="@data.Post_Id" class="btn btn-secondary mt-auto btn-sm">Read More</a>
                    </div>
                </div>
            </div>
            <!-- Card UI ENDS here -->
        }
    </div>
}
else
{
    <p class="text-muted mt-3">No results found.</p>
}
